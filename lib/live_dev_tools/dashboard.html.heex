<div>
  <%= if @views == [] do %>
    Waiting for a LiveView to mount...
  <% else %>
    <div>
      <form phx-change="form-changed">
        <select name="source">
          <%= for view <- @views do %>
            <option value={source_name(view)}><%= source_name(view) %></option>
          <% end %>
        </select>
      </form>
    </div>
  <% end %>
</div>
